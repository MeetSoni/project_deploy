<!DOCTYPE html>
{{> header}}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
     <style>
        .movie-card {
            margin: 10px; /* Reduced margin */
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            max-height: 400px; /* Set a max height for the card */
            overflow: hidden; /* Hide overflow for the card */
            border: 1px solid #ddd; /* Optional: Add border for better visual separation */
            border-radius: 8px; /* Optional: Add border radius for card */
        }
        .movie-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .card-body {
            padding: 15px;
        }
        .card-body p {
            margin-bottom: 5px;
            font-size: 14px;
        }
        .card-img-top {
            height: 200px; /* Reduced image height */
            object-fit: cover;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            {{#each movieData}}
            <div class="col-md-6">
                <div class="card movie-card">
                    <img src="{{ this.poster }}" class="card-img-top" alt="{{ this.title }} Poster">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title }} ({{ this.year }})</h5>
                        <p class="card-text"><strong>Plot:</strong> {{ this.plot }}</p>

                        <p class="card-text"><strong>Genres:</strong> {{ this.genres }}</p>
                        <p class="card-text"><strong>Runtime:</strong> {{ this.runtime }}</p>
                        <p class="card-text"><strong>Rated:</strong> {{ this.rated }}</p>
                        <p class="card-text"><strong>Cast:</strong> {{ this.cast }}</p>
                        <p class="card-text"><strong>Full Plot:</strong> {{ this.fullplot }}</p>
                        <p class="card-text"><strong>Languages:</strong> {{ this.languages }}</p>
                        <p class="card-text"><strong>Released:</strong> {{ this.released }}</p>
                        <p class="card-text"><strong>Directors:</strong> {{ this.directors }}</p>
                        <p class="card-text"><strong>Writers:</strong> {{ this.writers }}</p>
                        <p class="card-text"><strong>Awards:</strong> {{ this.awards }}</p>
                        <p class="card-text"><strong>Last Updated:</strong> {{ this.lastupdated }}</p>
                        <p class="card-text"><strong>IMDb:</strong> {{ this.imdb }}</p>
                        <p class="card-text"><strong>Countries:</strong> {{ this.countries }}</p>
                        <p class="card-text"><strong>Type:</strong> {{ this.type }}</p>
                        <p class="card-text"><strong>Tomatoes:</strong> {{ this.tomatoes }}</p>
                       
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Footer -->
    <!-- {{> footer}} -->

</body>
</html>
{{> footer}}
